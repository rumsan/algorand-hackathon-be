generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

enum GENDER {
  MALE
  FEMALE
  OTHER
}
model Beneficiary {
  uuid          String    @id @unique @default(uuid())
  email         String    @unique
  name          String
  age           Int
  gender        GENDER
  walletAddress String?
  isArchived    Boolean   @default(false)
  projects      Project[] @relation("BeneficiaryProjects")
}

model Project {
  uuid          String        @id @unique @default(uuid())
  name          String        @unique
  voucher       Voucher?      @relation(fields: [voucherId], references: [assetId])
  voucherId     Int?          @unique
  adminAddress  String[]
  isArchived    Boolean       @default(false)
  createdAt     DateTime      @default(now())
  imageUrl      String?
  vendor      Vendor?      
  vendorId      String?       @unique
  beneficiaries Beneficiary[] @relation("BeneficiaryProjects")
}

model Vendor {
  uuid          String  @id @unique @default(uuid())
  email         String  @unique
  name          String
  location      String
  walletAddress String
  collectedAsa  Int?    @default(0)
  isArchived    Boolean @default(false)
   project       Project @relation(fields: [projectId], references: [uuid])
  projectId     String  @unique
}


model Voucher {
  uuid          String   @id @unique @default(uuid())
  voucherName   String
  voucherSymbol String   @unique
  assetId       Int      @unique @default(0)
  project       Project?
}
